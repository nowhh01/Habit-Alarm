<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_header_appearance"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="@string/dark_theme_key"
            app:title="@string/dark_theme_title"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_header_notification"
        app:iconSpaceReserved="false">

        <Preference
            app:key="@string/notification_key"
            app:title="@string/notification_title"
            app:summary="@string/notification_summary"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>